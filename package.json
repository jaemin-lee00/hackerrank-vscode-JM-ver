{
  "name": "hackerrank-vscode",
  "displayName": "hackerrank-vscode",
  "description": "Solve Hackerrank challenges right from your VS Code now!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:hackerrank-vscode.helloWorld",
    "onCommand:hackerrank-vscode.signin",
    "onCommand:hackerrank-vscode.changeCredentials",
    "onCommand:hackerrank-vscode.logout"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hackerrank-vscode",
          "title": "Hackerrank",
          "icon": "resources/icon.png"
        }
      ]
    },
    "views": {
      "hackerrank-vscode": [
        {
          "id": "challenges",
          "name": "Challenges"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "challenges",
        "contents": "Sign in to your Hackerrank account and start hacking \n[Sign in to Hackerrank](command:hackerrank-vscode.signin)"
      }
    ],
    "commands": [
      {
        "command": "hackerrank-vscode.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "hackerrank-vscode.signin",
        "title": "Sign In"
      },
      {
        "command": "hackerrank-vscode.changeCredentials",
        "title": "Change Credentials"
      },
      {
        "command": "hackerrank-vscode.logout",
        "title": "Logout"
      }
    ]
  },
  "scripts": {
    "copy-assets": "copyfiles -u 1 ./src/**/*.ejs ./out",
    "clean": "rimraf out/",
    "vscode:prepublish": "npm run compile && npm run copy-assets",
    "compile": "tsc -p ./ && npm run copy-assets",
    "watch": "npm run copy-assets && tsc -w -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.3",
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.83.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vscode/test-electron": "^2.3.4",
    "clean": "^4.0.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "google-auth-library": "^9.14.2"
  }
}
